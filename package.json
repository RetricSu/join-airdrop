{
  "name": "join-airdrop",
  "version": "0.1.0",
  "description": "CKB JavaScript Smart Contract project",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "node scripts/build-all.js",
    "build:contract": "node scripts/build-contract.js",
    "test": "node scripts/build-all.js && jest",
    "add-contract": "node scripts/add-contract.js",
    "copy-to-app": "cp deployment/scripts.json ./app/src/deployment/scripts.json && cp deployment/system-scripts.json ./app/src/deployment/system-scripts.json && echo 'Copied deployment files to app/src/deployment/'",
    "deploy": "node scripts/build-all.js && node scripts/deploy.js && pnpm run copy-to-app",
    "clean": "rimraf dist",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@ckb-js-std/bindings": "~1.0.0",
    "@ckb-js-std/core": "~1.0.0",
    "dotenv": "^17.2.1"
  },
  "devDependencies": {
    "@ckb-ccc/core": "1.5.3",
    "@types/jest": "~29.5.14",
    "@types/node": "~22.13.8",
    "ckb-testtool": "1.0.3",
    "cross-fetch": "^4.1.0",
    "esbuild": "~0.25.8",
    "jest": "~29.7.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "ts-jest": "~29.2.6",
    "typescript": "~5.8.2",
    "web-streams-polyfill": "^4.2.0"
  }
}
